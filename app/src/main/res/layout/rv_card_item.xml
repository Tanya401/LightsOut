<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/movielayout"
        android:layout_width="257dp"
        android:layout_height="119dp"
        app:layout_constraintRight_toLeftOf="@+id/button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button"
        tools:layout_editor_absoluteY="-4dp">

        <ImageView
            android:id="@+id/movieImage"
            android:layout_width="90dp"
            android:layout_height="118dp"
            app:layout_constraintRight_toLeftOf="@+id/movielayout"
            tools:layout_editor_absoluteY="177dp"
            android:src="@drawable/img_2"/>


        <LinearLayout
            android:layout_width="151dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="100dp"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="125dp">

            <TextView
                android:id="@+id/moviename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The Batman"
                android:textStyle="bold"
                android:layout_marginTop="25dp"/>

            <TextView
                android:id="@+id/movielang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="English | Hindi" />

            <TextView
                android:id="@+id/movietype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="U/A" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="28dp"
        android:text="Book Now"
        app:layout_constraintLeft_toRightOf="@id/movielayout"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="@color/blueforapp"/>

</androidx.constraintlayout.widget.ConstraintLayout>